.header
  - if athlete_signed_in?
    .header-logo
      a= link_to athletes_path
        = image_tag "white_lion.png"
        p.logo The College Roster
  - else
    .header-logo
      a= link_to root_path
        p The College Roster
  - if athlete_signed_in?
    ul.header-nav
      li
        a= link_to edit_athlete_path(current_athlete)
          i.fa.fa-dribbble
          | Profile
      li
        a= link_to athlete_stats_path(current_athlete)
          i.fa.fa-signal
          | Stats
    .header-signin
      p= "Hi, #{welcome_name current_athlete}"
      a= link_to "Sign Out", logout_path
  - else
    .welcome-signin
      a= link_to "Sign In", login_path
